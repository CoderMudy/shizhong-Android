<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#262626"
    android:orientation="vertical" >

    <include
        android:layout_width="match_parent"
        android:layout_height="44dp"
        layout="@layout/top_bar_layout_with_left_black" >
    </include>

    <EditText
        android:id="@+id/suggess_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rectangle_corner_white1"
        android:gravity="left|top"
        android:hint="欢迎反馈意见"
        android:minLines="6"
        android:padding="8dp"
        android:textSize="@dimen/signture_size" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="4dp"
        android:padding="4dp"
        android:text="联系方式"
        android:textColor="@color/white_fefefe"
        android:textSize="@dimen/signture_size" />

    <com.shizhong.view.ui.base.view.ClearEditText
        android:id="@+id/content_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/rectangle_corner_white1"
        android:hint="手机、微信或者QQ"
        android:padding="12dp"
        android:textSize="@dimen/signture_size" />

    <TextView
        android:id="@+id/commit_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:background="@drawable/rectangle_corner_yellow_selector"
        android:gravity="center"
        android:padding="12dp"
        android:text="提交"
        android:textColor="@color/black_2a2a2a"
        android:textSize="@dimen/signture_size" />

</LinearLayout>