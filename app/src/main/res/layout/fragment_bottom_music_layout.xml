<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/music_name"
        android:textSize="18sp"
        android:padding="10dp"
        android:text="See_you_agine"
        android:layout_gravity="center_vertical"
        android:textColor="@color/sz_yellow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



    <LinearLayout
        android:layout_gravity="right|center_vertical"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/music_player_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_music_play"
        android:layout_margin="12dp"
        />

        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_margin="12dp"
            android:id="@+id/music_player_next_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_music_next_btn"
            />
    </LinearLayout>
</FrameLayout>