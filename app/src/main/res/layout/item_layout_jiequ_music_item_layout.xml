<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:padding="0dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:padding="0dp"
        android:layout_margin="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_centerInParent="true"
        android:id="@+id/music_forgound_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:layout_margin="0dp"
        fresco:roundAsCircle="true"
        fresco:actualImageScaleType="focusCrop"
        fresco:roundingBorderWidth="1dp"
        fresco:roundingBorderColor="@color/round_view_bound_color"
        fresco:placeholderImage="@drawable/sz_head_default"
        fresco:placeholderImageScaleType="centerCrop"
        />

    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_centerInParent="true"
        android:layout_width="30dp"
        android:layout_height="30dp"
        fresco:roundAsCircle="true"
        android:layout_margin="0dp"
        fresco:actualImageScaleType="focusCrop"
        fresco:roundingBorderWidth="1dp"
        fresco:roundingBorderColor="@color/round_view_bound_color"
        fresco:placeholderImage="@drawable/video_edit_tab_bg_color"
        fresco:placeholderImageScaleType="centerCrop"
         />
    <TextView
        android:layout_below="@+id/music_forgound_view"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/music_class_name"
        android:textSize="@dimen/size_14sp"
        android:padding="12dp"
        android:textColor="@color/white_fefefe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    </RelativeLayout>

</LinearLayout>