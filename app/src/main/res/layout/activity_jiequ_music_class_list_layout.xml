<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/black_2c2c2c"
    android:layout_height="match_parent">

    <include
        android:layout_width="match_parent"
        android:layout_height="@dimen/pickerview_topbar_height"
        layout="@layout/top_bar_layout_with_left_black"
        />
        <ScrollView
            android:id="@+id/scroll_view"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <include
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    layout="@layout/fragment_jiqu_banner_layout"
                    />



                <com.shizhong.view.ui.base.view.MyGridView
                    android:id="@+id/music_gird"
                    android:numColumns="2"
                    style="@style/SZListViewStyle_translation">
                </com.shizhong.view.ui.base.view.MyGridView>

            </LinearLayout>
        </ScrollView>
</LinearLayout>