<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/item_view"
        style="@style/item_layout_style"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/head_image"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/hot_video_icon" />

        <TextView
            android:id="@+id/messge_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@+id/head_image"
            android:layout_weight="1"
            android:maxEms="12"
            android:singleLine="true"
            android:text="推荐关注"
            android:textColor="@android:color/white"
            />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:singleLine="true"
            android:textColor="@color/grey_bbbbbb" />

        <TextView
            android:id="@+id/messge_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/messge_tag"
            android:layout_marginLeft="12dp"
            android:layout_toLeftOf="@+id/time"
            android:layout_toRightOf="@+id/head_image"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/message_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/head_image"
            android:layout_marginTop="0dp"
            android:gravity="right"
            android:text="查看详情》》"
            android:textColor="@android:color/white" />
    </RelativeLayout>

    <View style="@style/QYRSettingItemLineStyle" />

</LinearLayout>