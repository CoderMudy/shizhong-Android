<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
     >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
                <LinearLayout
                    android:paddingTop="7dp"
                    android:background="@color/black_1c1c1c"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/member_video_count"
                        android:layout_weight="1"
                        android:text="0"
                        android:paddingRight="12dp"
                        android:paddingLeft="12dp"
                        android:gravity="center"
                        android:textColor="@color/selector_white_to_yellow_text"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/member_music_count"
                        android:layout_weight="1"
                        android:text="0"
                        android:paddingRight="12dp"
                        android:paddingLeft="12dp"
                        android:gravity="center"
                        android:textColor="@color/selector_white_to_yellow_text"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/member_attent_count"
                        android:layout_weight="1"
                        android:text="0"
                        android:gravity="center"
                        android:paddingRight="12dp"
                        android:paddingLeft="12dp"
                        android:textColor="@color/selector_white_to_yellow_text"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/member_fans_count"
                        android:layout_weight="1"
                        android:text="0"
                        android:gravity="center"
                        android:textColor="@color/selector_white_to_yellow_text"
                        android:textSize="12sp"
                        android:paddingRight="12dp"
                        android:paddingLeft="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <com.shizhong.view.ui.base.view.MyRadioGroup
                    android:id="@+id/member_gp"
                    android:layout_width="match_parent"
                    android:padding="0dp"
                    android:layout_height="wrap_content"
                    android:background="@color/black_1c1c1c"
                    android:orientation="horizontal" >
                    <RadioButton
                        android:id="@+id/member_video"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:button="@null"
                        android:checked="false"
                        android:gravity="center"
                        android:paddingBottom="7dp"
                        android:paddingRight="12dp"
                        android:paddingLeft="12dp"
                        android:text="视频"
                        android:textColor="@color/selector_white_to_yellow_text"
                        android:textSize="14sp" />
                    <RadioButton
                        android:id="@+id/member_music"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:button="@null"
                        android:checked="false"
                        android:gravity="center"
                        android:paddingBottom="7dp"
                        android:paddingRight="12dp"
                        android:paddingLeft="12dp"
                        android:text="音乐"
                        android:textColor="@color/selector_white_to_yellow_text"
                        android:textSize="14sp" />


                    <RadioButton
                        android:id="@+id/member_attent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:button="@null"
                        android:checked="false"
                        android:gravity="center"
                        android:text="关注"
                        android:paddingBottom="7dp"
                        android:paddingRight="12dp"
                        android:paddingLeft="12dp"
                        android:textColor="@color/selector_white_to_yellow_text"
                        android:textSize="14sp" />

                    <RadioButton
                        android:id="@+id/member_fans"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:button="@null"
                        android:checked="false"
                        android:paddingBottom="7dp"
                        android:paddingRight="12dp"
                        android:paddingLeft="12dp"
                        android:gravity="center"
                        android:text="粉丝"
                        android:textColor="@color/selector_white_to_yellow_text"
                        android:textSize="14sp" />
                </com.shizhong.view.ui.base.view.MyRadioGroup>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_height="24dp">
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
            <View
                android:layout_gravity="center_horizontal"
                android:layout_width="0.5dp"
                android:layout_height="24dp"
                android:background="@color/grey_bbbbbb"
                />
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
            <View
                android:layout_gravity="center_horizontal"
                android:layout_width="0.5dp"
                android:layout_height="24dp"
                android:background="@color/grey_bbbbbb"
                />
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
            <View
                android:layout_gravity="center_horizontal"
                android:layout_width="0.5dp"
                android:layout_height="24dp"
                android:background="@color/grey_bbbbbb"
                />
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </FrameLayout>






</LinearLayout>