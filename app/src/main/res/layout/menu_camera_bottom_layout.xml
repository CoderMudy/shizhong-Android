<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menu_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:gravity="bottom"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/camera_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/slt_as_ios7_other_bt_top"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/camera_menu"
        android:textColor="#1E82FF"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/photos_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-0.5dp"
        android:background="@drawable/slt_as_ios7_other_bt_bottom"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/photos_menu"
        android:textColor="#1E82FF"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/cancel_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/slt_as_ios7_other_bt_single"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/cancel"
        android:textColor="#1E82FF"
        android:textSize="17sp" />
</LinearLayout>