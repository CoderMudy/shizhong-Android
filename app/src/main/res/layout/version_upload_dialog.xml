<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/drawale_loading_dialog_bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip"
        android:layout_marginTop="10dip"
        android:gravity="center"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:textColor="@android:color/white"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/dialogContent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip"
        android:layout_marginTop="10dip"
        android:gravity="left"
        android:paddingLeft="30dip"
        android:paddingRight="30dip"
        android:textColor="@android:color/white"
        android:textSize="13sp" />

    <View
        android:id="@+id/imageView1"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#FFFEEF00" />

    <LinearLayout
        android:id="@+id/layButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/drawable_left_black_shape" >

        <Button
            android:id="@+id/btnCancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:paddingBottom="16dp"
            android:paddingTop="16dip"
            android:text="取消"
            android:textColor="@color/selector_text_yellow"
            android:textSize="17sp" />

        <ImageView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#FFFEEF00" />

        <Button
            android:id="@+id/btnOk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:text="确认"
            android:textColor="@color/selector_text_yellow"
            android:textSize="17sp" />
    </LinearLayout>

</LinearLayout>