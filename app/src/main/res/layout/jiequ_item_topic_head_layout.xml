<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="54dp"
    android:clickable="false"
    android:focusable="false"
    android:paddingLeft="6dp"
    android:paddingRight="6dp" >

    <TextView
        android:id="@+id/topic_lable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/label_yellow_top_corner_shap"
        android:clickable="false"
        android:gravity="center"
        android:padding="8dp"
        android:text="热门话题"
        android:textColor="@color/black_1c1c1c"
        android:textSize="13sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:background="@color/sz_yellow" />

    <TextView
        android:id="@+id/topic_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:drawablePadding="8dp"
        android:drawableRight="@drawable/next_icon"
        android:padding="8dp"
        android:text="更多"
        android:textColor="@color/selector_white_text" />

</FrameLayout>