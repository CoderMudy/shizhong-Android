<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/login_background" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="32dp"
                android:text="@string/choise_favorite_dances"
                android:textColor="@android:color/white"
                android:textSize="24sp" />

            <View
                android:layout_width="320dp"
                android:layout_height="0.5dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="22dp"
                android:background="@android:color/white" />

            <com.shizhong.view.ui.base.view.MyGridView
                android:id="@+id/dances_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:horizontalSpacing="20dp"
                android:numColumns="3"
                android:verticalSpacing="20dp" />

            <TextView
                android:id="@+id/choise_finish"
                android:layout_width="280dp"
                android:layout_height="44dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:background="@drawable/rectangle_corner_purpel_selector"
                android:gravity="center"
                android:text="@string/choise_finish"
                android:textColor="@android:color/white"
                android:textSize="23sp" />
        </LinearLayout>
    </ScrollView>

</FrameLayout>