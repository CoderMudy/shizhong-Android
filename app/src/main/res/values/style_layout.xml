<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="edid_layout_style">
        <item name="android:background">@drawable/rectangle_corner_translation</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="item_layout_style">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:paddingLeft">6dp</item>
    </style>

    <style name="yellow_button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:background">@color/sz_yellow</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">@color/black_1c1c1c</item>
        <item name="android:textSize">15sp</item>
    </style>

</resources>